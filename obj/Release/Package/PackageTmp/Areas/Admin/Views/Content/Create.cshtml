
@model demo1.Models.Views.ContentModel
@using demo1.CodeLogic.Helper
@using demo1.CodeLogic
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var content = Model.Content;
    var typeContents = Model.TypeContents;
    var baseStatus = Model.BaseStatus;
}

<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i>&nbsp;@ViewBag.Title</h3>
    <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Thông tin nội dung</h4>
                <form id="FormCrBlogCategory" class="quickSubmit form-horizontal style-form bv-form validateForm useScrollBar" action="@Model.Action" method="post"> @**@

                    <input type="hidden" name="ID" value="@content.ID" />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Loại nội dung</label>
                        <div class="col-sm-10">
                            @Html.CusDropdownList("crType", "Type", "Chọn loại nội dung", typeContents.Select(x => new SelectListItem() { Text = x.Value, Value = x.Key.ToString(), Selected = x.Key == content.Type }), "Chọn loại nội dung")
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Tiêu đề</label>
                        <div class="col-sm-10">
                            @Html.CusTextBox("crTitle", "Title", content.Title, "Tiêu đề", "Tiêu đề", false, false)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Nội dung chữ 1</label>
                        <div class="col-sm-10">
                            @Html.CusTextArea("crContent1", "Content1", content.Content1, "Nội dung chữ 1", "Nội dung chữ 1", false, false,row:5)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Nội dung chữ 2</label>
                        <div class="col-sm-10">
                            @Html.CusTextArea("crContent2", "Content2", content.Content2, "Nội dung chữ 2", "Nội dung chữ 2", false, false,row:5)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Nội dung số 1</label>
                        <div class="col-sm-10">
                            @Html.CusTextBox("crContentNumber1", "ContentNumber1", content.ContentNumber1, "Nội dung số 1", "Nội dung số 1", false, false)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Nội dung số 2</label>
                        <div class="col-sm-10">
                            @Html.CusTextBox("crContentNumber2", "ContentNumber2", content.ContentNumber2, "Nội dung số 2", "Nội dung số 2", false, false)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Trạng thái</label>
                        <div class="col-sm-10">
                            @Html.CusDropdownList("crStatus", "Status", "Chọn trạng thái", baseStatus.Select(x => new SelectListItem() { Text = x.Value, Value = x.Key.ToString(), Selected = x.Key == content.Status }), "Chọn trạng thái")
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="text-right">
                                <a href="/quan-tri/noi-dung" class="btn btn-success " style="color:aliceblue; margin-right:2%">Quay lại</a>
                                <button type="submit" class="btn btn-info ">@Model.Button</button>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- col-lg-12-->
    </div>
</section>

@section css{

}
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".cusleft-content").addClass("active");
            $(".cusleft-contents").addClass("active-cus");
        });
    </script>
}


