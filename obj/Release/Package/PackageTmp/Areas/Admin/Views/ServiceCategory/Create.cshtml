

@model demo1.Models.Views.CategoryModel
@using demo1.CodeLogic.Helper
@using demo1.CodeLogic
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var categoryService = Model.CategoryService;
    var baseStatus = Model.BaseStatus;
}

<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i>&nbsp;@ViewBag.Title</h3>
    <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Thông tin danh mục danh mục dịch vụ</h4>
                <form id="FormCrBlogCategory" class="quickSubmit form-horizontal style-form bv-form validateForm useScrollBar" action="@Model.Action" method="post">

                    <input type="hidden" name="ID" value="@categoryService.ID" />
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Tên danh mục dịch vụ</label>
                        <div class="col-sm-10">
                            @Html.CusTextBox("crName", "Name", categoryService.Name, "Tên danh mục dịch vụ", "Tên danh mục dịch vụ", false, true)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Mô tả</label>
                        <div class="col-sm-10">
                            @Html.CusTextBox("crDescription", "Description", categoryService.Description, "Mô tả", "Mô tả", false, false)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Trạng thái</label>
                        <div class="col-sm-10">
                            @Html.CusDropdownList("crStatus", "Status", "Chọn trạng thái", baseStatus.Select(x => new SelectListItem() { Text = x.Value, Value = x.Key.ToString(), Selected = x.Key == categoryService.Status }), "Chọn trạng thái")
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="text-right">
                                <a href="/quan-tri/danh-muc-dich-vu" class="btn btn-success " style="color:aliceblue; margin-right:2%">Quay lại</a>
                                <button type="submit" class="btn btn-info ">@Model.Button</button>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- col-lg-12-->
    </div>
</section>

@section css{

}
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".cusleft-category").addClass("active");
            $(".cusleft-servicecategorys").addClass("active-cus");
        });
    </script>
}



