@model demo1.Models.Views.PracticeDemoModel
@using demo1.CodeLogic.Helper
@using demo1.CodeLogic
@using demo1.CodeLogic.Customs
@using demo1.CodeLogic.Enums
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var practiceDemo = Model.PracticeDemo;
    var practiceDemoStatus = Model.PracticeDemoStatus;
    var user = Model.User;
}

<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i>&nbsp;@ViewBag.Title</h3>
    <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Thông tin lịch tập thử</h4>
                <form id="FormCrBlogCategory" class="quickSubmit form-horizontal style-form bv-form validateForm useScrollBar" action="" method="post">

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Họ và tên</label>
                        <div class="col-sm-10">
                            @Html.CusTextBox("crName", "Name", user.ID == 0 ? practiceDemo.Name : user.Name, "Tên bài viết", "Tên bài viết", false, true, isReadOnly: true)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Số điện thoại</label>
                        <div class="col-sm-10">
                            @Html.CusTextBox("crPhone", "Phone", user.ID == 0 ? practiceDemo.Phone : user.Phone, "Số điện thoại", "Số điện thoại", false, true, isReadOnly: true)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Thời gian tập</label>
                        <div class="col-sm-10">
                            @Html.CusTextBox("crDayTime", "DayTime", Utils.DateToString(practiceDemo.DayTime, "dd/MM/yyyy HH:mm"), "Thời gian tập", "Thời gian tập", false, true, isReadOnly: true)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Trạng thái</label>
                        <div class="col-sm-10">
                            @if (practiceDemo.Status == (int)Enums.PracticeDemoStatus.ChuaLienHe)
                            {
                                <h4><span class="label label-warning lable-lg">@practiceDemoStatus.GetValue(practiceDemo.Status)</span></h4>
                            }
                            else if (practiceDemo.Status == (int)Enums.PracticeDemoStatus.DaLienHe)
                            {
                                <h4><span class="label label-info lable-lg">@practiceDemoStatus.GetValue(practiceDemo.Status)</span></h4>
                            }
                            else
                            {
                                <h4><span class="label label-success lable-lg">@practiceDemoStatus.GetValue(practiceDemo.Status)</span></h4>
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Địa chỉ</label>
                        <div class="col-sm-10">
                            @Html.CusTextBox("crAddress", "Address", practiceDemo.Address, "Địa chỉ", "Địa chỉ", false, true, isReadOnly: true)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                            @Html.CusTextBox("crEmail", "Email", practiceDemo.Email, "Email", "Email", false, true, isReadOnly: true)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Ghi chú</label>
                        <div class="col-sm-10">
                            @Html.CusTextBox("crNote", "Note", practiceDemo.Note, "Ghi chú", "Ghi chú", false, true, isReadOnly: true)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="text-right">
                                <a href="/quan-tri/lich-dang-ki-tap-thu" class="btn btn-success " style="color:aliceblue; margin-right:2%">Quay lại</a>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- col-lg-12-->
    </div>
</section>

@section css{

}
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".cusleft-category").addClass("active");
            $(".cusleft-blogcategorys").addClass("active-cus");
        });
    </script>
}


