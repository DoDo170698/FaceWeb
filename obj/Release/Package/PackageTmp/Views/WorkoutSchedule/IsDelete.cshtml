<form id="FrmDlItem" action="@Model.Url" data-target="@(Equals(Model.Target,null)? string.Empty :Model.Target)"
      accept-charset="utf-8" enctype="multipart/form-data" class="form-horizontal @(Equals(Model.Class,null))" method="POST">
    <div class="contact-form">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <!--Header-->
                    <div class="modal-header">
                        <h4 class="modal-title text-center" id="myModalCrUser" style="color:#e5ce48">@Model.Title</h4>
                        <button type="button" class="close closeDialog" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    

                    <!--Body-->
                    <div class="modal-body" style="background: #262525;">
                        <div class="form-group row">
                            
                            <div class="col-sm-12">
                                <label class=" control-label" style="color: #e5ce48;line-height: 40px;">@Model.Content</label>
                            </div>
                        </div>
                    </div>
                    <!--Footer-->
                    <div class="modal-footer">
                        @if (Model.IsMulti)
                        {
                            <input type="hidden" name="IDs" value="@Model.IDs" />
                        }
                        else
                        {
                            <input type="hidden" name="ID" value="@Model.ID" />
                        }
                        @if (Request.IsAjaxRequest())
                        {
                            <button class="btn btn-default closeDialog" type="button">@string.Format("Đóng")</button>
                        }
                        <button type="submit" class="btn btn-primary">Xóa</button>
                    </div>
                </div>
            </div>
        </div>
